{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure: Release",
            "type": "shell",
            "command": "cmake -B build --preset Release",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "CMake Configure: Debug",
            "type": "shell",
            "command": "cmake -B build --preset Debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Vcpkg Install",
            "type": "shell",
            "command": "vcpkg install --allow-unsupported --clean-after-build --triplet x64-windows",
            "group": {
                
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "CMake Build: Release",
            "type": "shell",
            "command": "cmake -DCMAKE_BUILD_TYPE=Release ; cmake --build build --preset Release",
            "group": {

                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "CMake Build: Debug",
            "type": "shell",
            "command": "cmake -DCMAKE_BUILD_TYPE=Debug ; cmake --build build --preset Debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        }
    ]
}