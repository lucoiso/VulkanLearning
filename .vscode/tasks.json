{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Conan Install: Debug",
            "type": "shell",
            "command": "conan install . --build=missing -pr Profiles/Windows_x64_Debug ; cmake --preset conan-default",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Conan Install: Release",
            "type": "shell",
            "command": "conan install . --build=missing -pr Profiles/Windows_x64_Debug ; cmake --preset conan-default",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "CMake Build: Debug",
            "type": "shell",
            "command": "cmake --build -DCMAKE_BUILD_TYPE=Debug --preset conan-debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "CMake Build: Debug with Sanitizer",
            "type": "shell",
            "command": "cmake --build -DCMAKE_BUILD_TYPE=Debug --preset conan-debug -DCMAKE_CXX_FLAGS=\"-fsanitize=address -fsanitize=leak -g\" -DCMAKE_C_FLAGS=\"-fsanitize=address  -fsanitize=leak -g\" -DCMAKE_EXE_LINKER_FLAGS=\"-fsanitize=address -fsanitize=leak\" -DCMAKE_MODULE_LINKER_FLAGS=\"-fsanitize=address -fsanitize=leak\"",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "CMake Build: Release",
            "type": "shell",
            "command": "cmake --build -DCMAKE_BUILD_TYPE=Release --preset conan-release",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        }
    ]
}