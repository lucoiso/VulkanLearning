{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Conan Install: Debug",
            "type": "shell",
            "command": "conan install . --build=missing -pr Profiles/Windows_x64_Debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Conan Install: Release",
            "type": "shell",
            "command": "conan install . --build=missing -pr Profiles/Windows_x64_Release",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "CMake Build: Debug",
            "type": "shell",
            "command": "cmake -DCMAKE_BUILD_TYPE=Debug ; cmake --build --preset conan-debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "CMake Build: Debug with Sanitizer",
            "type": "shell",
            "command": "cmake -DCMAKE_BUILD_TYPE=Debug -DCMAKE_CXX_FLAGS=\"-fsanitize=address\" ; cmake --build --preset conan-debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "CMake Build: Release",
            "type": "shell",
            "command": "cmake -DCMAKE_BUILD_TYPE=Release ; cmake --build --preset conan-release",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        }
    ]
}