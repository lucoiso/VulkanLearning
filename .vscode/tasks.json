{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake .",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "VCPKG Install",
            "type": "shell",
            "command": "vcpkg install --allow-unsupported --clean-after-build",
            "group": {
                
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "CMake Build: VCPKG Release",
            "type": "shell",
            "command": "cmake --build . --preset vcpkg-release",
            "group": {

                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "CMake Build: VCPKG Debug",
            "type": "shell",
            "command": "cmake --build . --preset vcpkg-debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        }
    ]
}