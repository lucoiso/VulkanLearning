{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake Configure: Release",
      "type": "shell",
      "command": "cmake -B out/build/Release  --preset Release",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "CMake Configure: Debug",
      "type": "shell",
      "command": "cmake -B out/build/Debug --preset Debug",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Vcpkg Install",
      "type": "shell",
      "command": "vcpkg install --clean-after-build --triplet x64-windows",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "CMake Build: Release",
      "type": "shell",
      "command": "cmake --build out/build --preset Release",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "CMake Build: Debug",
      "type": "shell",
      "command": "cmake --build out/build --preset Debug",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "CMake Rebuild: Release",
      "type": "shell",
      "command": "cmake -DCMAKE_BUILD_TYPE=Release ; cmake --build out/build --clean-first --preset Release",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "CMake Rebuild: Debug",
      "type": "shell",
      "command": "cmake -DCMAKE_BUILD_TYPE=Debug ; cmake --build out/build --clean-first --preset Debug",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "CMake Clean",
      "type": "shell",
      "command": "cmake --build out/build --target clean",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    }
  ]
}